<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/edit_background"
	android:padding="5sp"
	>
	<TextView
		android:id="@+id/title"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:paddingTop="5sp"
		android:paddingBottom="5sp"
		android:textSize="16sp"
		android:textColor="@color/title_text"
		/>
	<TextView
		android:id="@+id/subject_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/title"
		android:text="件名："
		android:paddingTop="15sp"
		android:paddingBottom="5sp"
		/>
	<TextView
		android:id="@+id/subject_context"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:singleLine="true"
		android:scrollHorizontally="true"
		android:layout_toRightOf="@id/subject_title"
		android:layout_alignBaseline="@id/subject_title"
		/>

	<TextView
		android:id="@+id/time_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/subject_title"
		android:text="時間："
		android:paddingTop="25sp"
		android:paddingBottom="25sp"
		/>
	<TextView
		android:id="@+id/time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/time_title"
		android:layout_alignBaseline="@id/time_title"
		/>

	<TextView
		android:id="@+id/context_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/context_title"
		android:layout_below="@id/time_title"
		android:text="要件："
		/>
	<TextView
		android:id="@+id/context"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/context_title"
		android:layout_alignTop="@id/context_title"
		/>
</RelativeLayout>
