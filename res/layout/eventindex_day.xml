<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>
	<TextView 
		android:id="@+id/ev_day_index_current_date"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:gravity="center"
		android:textSize="20sp"
		android:background="@drawable/headline_date"
		/>
	<LinearLayout
		android:id="@+id/ev_day_index_wholeday_list"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/ev_day_index_current_date"
		android:background="@color/board_background"
		android:orientation="vertical"
		/>
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/ev_day_index_wholeday_list"
		>
		<LinearLayout
			android:id="@+id/ev_day_index_main_screen"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			>
			<com.ariel.android.airpocket.EventView
				android:id="@+id/ev_day_index_listview"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:divider="#00000000"
				android:background="@color/board_background"
				/>
		</LinearLayout>
	</ScrollView>
</RelativeLayout>
