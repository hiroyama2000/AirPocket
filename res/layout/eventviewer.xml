<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/edit_background"
	>
	<TextView
		android:id="@+id/title"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:textSize="20sp"
		android:gravity="center"
		android:textColor="@color/title_text"
		android:background="@drawable/headline_date"
		/>
	<TableLayout
		android:id="@+id/ev_viewer_operations"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/title"
		android:paddingTop="10sp"
		android:paddingBottom="10sp"
		>
		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			>
			<Button
				android:id="@+id/evv_operation_edit"
				android:text="@string/edit_event"
				/>
			<Button
				android:id="@+id/evv_operation_delete"
				android:text="@string/delete_event"
				/>
		</TableRow>
	</TableLayout>
	<TextView
		android:id="@+id/subject_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/ev_viewer_operations"
		android:text="件名："
		android:textColor="@color/normal_text"
		/>
	<TextView
		android:id="@+id/subject_context"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:singleLine="true"
		android:scrollHorizontally="true"
		android:layout_toRightOf="@id/subject_title"
		android:layout_alignBaseline="@id/subject_title"
		android:textSize="17sp"
		android:textColor="@color/normal_text"
		/>

	<TextView
		android:id="@+id/time_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/subject_title"
		android:text="時間："
		android:textColor="@color/normal_text"
		/>
	<TextView
		android:id="@+id/time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/time_title"
		android:layout_alignBaseline="@id/time_title"
		android:textSize="17sp"
		android:textColor="@color/normal_text"
		/>

	<TextView
		android:id="@+id/context_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/context_title"
		android:layout_below="@id/time_title"
		android:text="要件："
		android:textColor="@color/normal_text"
		/>
	<TextView
		android:id="@+id/context"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/context_title"
		android:textSize="17sp"
		android:textColor="@color/normal_text"
		/>
</RelativeLayout>
